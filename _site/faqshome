			$("#AudienceSelector a").live("click", function () {

				var slide = $(this).attr('href');

				$(this).addClass("current");

				$("a", $(this).parents("li").siblings("li")).removeClass("current");

				// show slide

				$(this).parents("ul").siblings("div").hide();

				$(slide).show();

				return false;

			});



